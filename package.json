{
  "name": "clipboard",
  "version": "1.0.1",
  "description": "clipboard manager",
  "main": "electron/main.js",
  "author": "Atishay Jain",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@emotion/react": "11.11.4",
    "@emotion/styled": "11.11.0",
    "@mui/icons-material": "5.15.21",
    "@mui/material": "5.15.14",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "electron-packager": "^17.1.1",
    "@types/electron": "1.6.10",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "@types/webpack": "5.28.5",
    "@types/webpack-dev-server": "4.7.2",
    "@types/jest": "^29.5.12",
    "typescript": "5.4.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "electron": "29.1.5",
    "electron-react-devtools": "0.5.3",
    "html-webpack-plugin": "5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "9.5.1",
    "webpack": "5.91.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "5.0.4"
  },
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "electron:start": "electron .",
    "electron:run": "webpack --mode production; electron .",
    "start:all": "yarn build && yarn electron:start",
    "build:mac": "yarn && yarn build && yarn package-mac",
    "package-mac": "yarn build; electron-packager . clipboard --overwrite --asar=true --platform=darwin --icon=./assets/clipboard.icns --prune=true --ignore='(__tests__|src|jest\\.config\\.js|jest\\.setup\\.js|webpack\\.config\\.js|tsconfig\\.json|README\\.md|TODO\\.md|\\.gitignore|coverage|release-builds)' --out=release-builds",
    "package-win": "yarn build; electron-packager . clipboard --overwrite --asar=true --platform=win32 --arch=ia32 --icon=./assets/clipboard.ico --prune=true --out=release-builds --version-string.CompanyName=CM --version-string.FileDescription=CM --version-string.ProductName=\"clipboard\"",
    "package-linux": "yarn build; electron-packager . clipboard --overwrite --platform=linux --arch=x64 --icon=./assets/clipboard.png --out=release-builds",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  }
}
