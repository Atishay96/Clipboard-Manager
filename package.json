{
  "name": "clipboard",
  "version": "1.0.0",
  "description": "clipboard manager",
  "main": "electron/main.js",
  "author": "Atishay Jain",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.14",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.4.3"
  },
  "devDependencies": {
    "@electron/packager": "^18.1.3",
    "@types/electron": "^1.6.10",
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-server": "^4.7.2",
    "electron": "^29.1.5",
    "electron-react-devtools": "^0.5.3",
    "html-webpack-plugin": "^5.6.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "electron:start": "electron .",
    "electron:run": "webpack --mode production; electron .",
    "package-mac": "yarn build; electron-packager . --overwrite --dir --mac --universal --platform=darwin --icon=assets/clipboard-icon.png --prune=true --out=release-builds",
    "package-win": "yarn build; electron-packager . clipboard --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/clipboard-icon.png --prune=true --out=release-builds --version-string.CompanyName=CM --version-string.FileDescription=CM --version-string.ProductName=\"clipboard\"",
    "package-linux": "yarn build; electron-packager . clipboard --overwrite --platform=linux --arch=x64 --icon=assets/clipboard-icon.png --out=release-builds"
  }
}
